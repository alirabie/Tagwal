<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relall"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content"
    >
<RelativeLayout
    android:id="@+id/linall"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
   android:layout_alignParentRight="true"
    android:background="@android:color/white"
    android:layout_marginRight="25dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_centerInParent="true"
        android:background="@drawable/logo"
        android:layout_width="150dp"
        android:layout_height="100dp" />

    <com.andexert.library.RippleView
        android:id="@+id/rel_home"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogo"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        rv_centered="true">
        <ImageView
            android:id="@+id/img_home_minu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/home"
            android:layout_centerVertical="true"/>
          <!--  android:background="@drawable/realestate"--> />

        <TextView
            android:id="@+id/txt_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/img_shop_minu"
            android:layout_marginRight="15dp"
            android:text="الرئيسية"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16dp" />

    </com.andexert.library.RippleView>
    <com.andexert.library.RippleView
        android:id="@+id/rel_personaldata"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_home"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        rv_centered="true">
        <ImageView
            android:id="@+id/img_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/profile"
            android:layout_centerVertical="true"/>
        <!--  android:background="@drawable/realestate"--> />

        <TextView
            android:id="@+id/txt_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/img_data"
            android:layout_marginRight="15dp"
            android:text="البيانات الشخصية"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16dp" />

    </com.andexert.library.RippleView>
    <com.andexert.library.RippleView
        android:id="@+id/cart"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_personaldata"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        rv_centered="true">
        <ImageView
            android:id="@+id/img_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/share"
            android:layout_centerVertical="true"/>
        <!--  android:background="@drawable/realestate"--> />

        <TextView
            android:id="@+id/txt_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/img_cart"
            android:layout_marginRight="15dp"
            android:text="سلة المشتريات"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16dp" />

    </com.andexert.library.RippleView>
    <com.andexert.library.RippleView
        android:id="@+id/share"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cart"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        rv_centered="true">
        <ImageView
            android:id="@+id/img_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/share"
            android:layout_centerVertical="true"/>
        <!--  android:background="@drawable/realestate"--> />

        <TextView
            android:id="@+id/txt_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/img_share"
            android:layout_marginRight="15dp"
            android:text="شارك التطبيق"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16dp" />

    </com.andexert.library.RippleView>
    <com.andexert.library.RippleView
        android:id="@+id/rel_contact"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        rv_centered="true">
        <ImageView
            android:id="@+id/img_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/email"
            android:layout_centerVertical="true"/>
        <!--  android:background="@drawable/realestate"--> />

        <TextView
            android:id="@+id/txt_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/img_contact"
            android:layout_marginRight="15dp"
            android:text="ارسل مقترحاتك"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16dp" />

    </com.andexert.library.RippleView>
    <com.andexert.library.RippleView
        android:id="@+id/rel_logout"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_contact"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        rv_centered="true">
        <ImageView
            android:id="@+id/img_logoutt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/logout"
            android:layout_centerVertical="true"/>
        <!--  android:background="@drawable/realestate"--> />

        <TextView
            android:id="@+id/txt_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/img_logoutt"
            android:layout_marginRight="15dp"
            android:text="تسجيل خروج"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16dp" />

    </com.andexert.library.RippleView>

</RelativeLayout>
</RelativeLayout>

